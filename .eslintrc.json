{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"prettier"
	],
	"plugins": [
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "warn"
	},
	"reportUnusedDisableDirectives": true,
	"root": true,
	"ignorePatterns": [
		"dist/*"
	]
}
